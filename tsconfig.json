{
  "compilerOptions": {
    "strict": true,
    "target": "ES6",
    "baseUrl": "./",
    "outDir": "./lib",
    "declaration": true,
    "module": "commonjs",

    "noImplicitAny": true,
    "noImplicitThis": true,
    "removeComments": true,
    "resolveJsonModule": true,
    "noImplicitReturns": true,

    "strictFunctionTypes": false,
    "strictBindCallApply": false,

    "emitDecoratorMetadata": true,
    "experimentalDecorators": true
  },
  "include": ["src"],
  "exclude": [
    "node_modules"
  ]
}

